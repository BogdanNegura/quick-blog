extend ../_component/layout/base

block config
    -
        var title = template.config.title || 'Change me, title'
        var description = template.config.description || `change me, I'm description`
block content 
    .content
        each something in template.body
            if something.type === 'blockquote'
                blockquote.blockquote
                    .blockquote__body
                        each paragraph in something.data
                            p=paragraph
                    .blockquote-footer
                        a(href=something.link, target="_blank")=something.source

            if something.type == 'pre'
                h3.pre-title=something.title              
                each dataValue in something.data
                    pre=dataValue

            if something.type == "h2"
                h2=something.data
            if something.type == "paragraph"
                each paragraph in something.data
                    p=paragraph
